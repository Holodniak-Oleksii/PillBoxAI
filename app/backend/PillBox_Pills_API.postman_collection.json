{
	"info": {
		"_postman_id": "pill-box-pills-api",
		"name": "PillBox - Pills API",
		"description": "Collection for testing all Pills API endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "pillId",
			"value": "1",
			"type": "string"
		},
		{
			"key": "medkitId",
			"value": "1",
			"type": "string"
		},
		{
			"key": "userId",
			"value": "1",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Create Pill",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    var jsonData = pm.response.json();",
							"    pm.collectionVariables.set(\"pillId\", jsonData.id);",
							"    pm.environment.set(\"pillId\", jsonData.id);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Aspirin\",\n    \"activeSubstance\": \"Acetylsalicylic acid\",\n    \"description\": \"Pain reliever and fever reducer\",\n    \"usageInstructions\": \"Take 1-2 tablets every 4-6 hours as needed\",\n    \"sideEffects\": \"Stomach upset, heartburn, drowsiness\",\n    \"contraindications\": \"Allergy to aspirin, bleeding disorders\",\n    \"expiryDate\": \"2025-12-31\",\n    \"quantity\": 100\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/pills?medkitId={{medkitId}}&createdById={{userId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"pills"
					],
					"query": [
						{
							"key": "medkitId",
							"value": "{{medkitId}}"
						},
						{
							"key": "createdById",
							"value": "{{userId}}"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Pill by ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/pills/{{pillId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"pills",
						"{{pillId}}"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get All Pills",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/pills",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"pills"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Pills by Medkit ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/pills/medkit/{{medkitId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"pills",
						"medkit",
						"{{medkitId}}"
					]
				}
			},
			"response": []
		},
		{
			"name": "Search Pills by Name",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/pills/search?name=Aspirin",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"pills",
						"search"
					],
					"query": [
						{
							"key": "name",
							"value": "Aspirin"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Update Pill",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Aspirin Updated\",\n    \"activeSubstance\": \"Acetylsalicylic acid\",\n    \"description\": \"Updated pain reliever and fever reducer\",\n    \"usageInstructions\": \"Take 1-2 tablets every 4-6 hours as needed with food\",\n    \"sideEffects\": \"Stomach upset, heartburn, drowsiness, nausea\",\n    \"contraindications\": \"Allergy to aspirin, bleeding disorders, pregnancy\",\n    \"expiryDate\": \"2026-06-30\",\n    \"quantity\": 80\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/pills/{{pillId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"pills",
						"{{pillId}}"
					]
				}
			},
			"response": []
		},
		{
			"name": "Take Pill (Decrease Quantity)",
			"request": {
				"method": "PATCH",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/pills/{{pillId}}/take?quantity=1",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"pills",
						"{{pillId}}",
						"take"
					],
					"query": [
						{
							"key": "quantity",
							"value": "1",
							"description": "Number of pills to take"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Add Quantity (Increase Stock)",
			"request": {
				"method": "PATCH",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/pills/{{pillId}}/add?quantity=50",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"pills",
						"{{pillId}}",
						"add"
					],
					"query": [
						{
							"key": "quantity",
							"value": "50",
							"description": "Number of pills to add to stock"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Delete Pill",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/pills/{{pillId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"pills",
						"{{pillId}}"
					]
				}
			},
			"response": []
		}
	]
}
